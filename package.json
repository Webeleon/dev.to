{
  "name": "@webeleon/dev.to",
  "version": "0.2.4",
  "description": "dev.to API client",
  "public": true,
  "keywords": [
    "dev.to",
    "API"
  ],
  "main": "lib/main.js",
  "types": "lib/main.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "patch": "npm run build && npm version patch && npm publish",
    "format": "prettier --write '**/*.ts'",
    "build": "tsc",
    "generate-doc": "typedoc",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Webeleon/dev.to"
  },
  "bugs": {
    "url": "https://github.com/Webeleon/dev.to/issues"
  },
  "contributors": [
    {
      "name": "Julien Prugne",
      "email": "julien@webeleon.dev"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "26.0.23",
    "@types/sinon": "10.0.1",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.3.0",
    "sinon": "10.0.0",
    "standard-version": "^9.3.0",
    "ts-jest": "26.5.6",
    "ts-node": "10.0.0",
    "typedoc": "0.20.36",
    "typescript": "4.3.2"
  },
  "dependencies": {
    "node-fetch": "^2.6.1",
    "query-string": "^7.0.0"
  },
  "lint-staged": {
    "*.{ts,js,css,md}": "prettier --write; npm run generate-doc"
  }
}
